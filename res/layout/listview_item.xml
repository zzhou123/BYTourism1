<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    <ImageView
        android:layout_marginLeft="5dp"
        android:id="@+id/sight_view"
        android:layout_width="60dp"
        android:layout_height="80dp"
        android:src="@drawable/xiamen_three" />

     <TextView
         android:id="@+id/sight_name"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_toRightOf="@+id/sight_view"
         android:text="@string/xiamen_university"
         android:layout_marginLeft="8dp"
         android:textColor="#000000"
         android:textSize="18sp" />

      <TextView
          android:id="@+id/sight_type"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignLeft="@+id/sight_name"
          android:layout_below="@+id/sight_name"
          android:layout_marginTop="16dp"
          android:text="@string/cultural_religion" />


      <ImageView
          android:id="@+id/imagePrice"
          android:layout_width="10dp"
          android:layout_height="10dp"
          android:layout_above="@+id/textView2"
          android:layout_alignParentRight="true"
          android:layout_marginRight="60dp"
          android:src="@drawable/price" />

      <TextView
          android:id="@+id/sight_price"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_above="@+id/textView2"
          android:layout_alignLeft="@+id/imagePrice"
          android:layout_marginLeft="14dp"
          android:text="68" 
          android:textColor="#EA8010"
          android:textSize="25sp"
          
          
          />

      <TextView
          android:id="@+id/textView4"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignTop="@+id/imagePrice"
          android:layout_toRightOf="@+id/sight_price"
          android:text="èµ·" />
<!-- style="@style/MyRatingBar" -->

	 <RatingBar
          android:id="@+id/sight_avggrade"
          style="?android:attr/ratingBarStyleSmall"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignLeft="@+id/sight_type"
          android:layout_below="@+id/sight_name"
          android:isIndicator="true"
          android:numStars="5"
         /> 
     
</RelativeLayout>