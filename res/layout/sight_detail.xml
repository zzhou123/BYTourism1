<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:background="#696969" >

        <Button
            android:id="@+id/back_btn"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:drawableLeft="@drawable/arrow" 
            android:text="景点详情"
            android:textSize="14sp"
            />

        <ImageButton
            android:id="@+id/collectButton"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/collect" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@+id/collectButton"
            android:gravity="center"
            android:text="@string/collect"
            android:textSize="14sp" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/sight_view"
        android:layout_width="wrap_content"
        android:layout_height="125dp"
        android:layout_below="@+id/relativeLayout1"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/home_one" />

    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
         android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true" >

        <TextView
            android:id="@+id/sight_describe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="23dp"
            android:text="景点介绍" />
        
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativelayout3"
        android:layout_width="fill_parent"
        android:layout_height="150dp"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@+id/relativeLayout2" >
    </RelativeLayout>

   <EditText
        android:id="@+id/sight_my_message"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relativelayout3"
        android:ems="10"
        android:hint="@string/message"
        android:inputType="textMultiLine"
        android:padding="10dp"
        android:src="@drawable/home_three" > 
    </EditText>
	
   <TextView
       android:id="@+id/sight_all_message"
       android:layout_width="wrap_content"
       android:layout_height="fill_parent"
       android:layout_alignLeft="@+id/relativeLayout2"
       android:layout_alignParentRight="true"
       android:layout_below="@+id/sight_message" />

   <TextView
       android:id="@+id/city_name"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_alignBottom="@+id/relativeLayout1"
       android:layout_alignParentTop="true"
       android:layout_centerHorizontal="true"

       android:gravity="center"/>
   
</RelativeLayout>